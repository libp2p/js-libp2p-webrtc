{
  "name": "js-libp2p-webrtc-browser-to-server",
  "version": "1.0.0",
  "description": "Connect a browser to a server",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "go-libp2p-server": "cd ../go-libp2p-server && go run ./main.go",
    "test": "npm run build && npm run test:chrome && npm run test:firefox",
    "test:chrome": "playwright test tests",
    "test:firefox": "npm run build && playwright test --browser firefox tests"
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^11.0.0",
    "@multiformats/multiaddr": "^12.0.0",
    "it-pushable": "^3.1.0",
    "@libp2p/webrtc": "file:../../",
    "libp2p": "^0.43.2",
    "vite": "^4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "test-util-ipfs-example": "^1.0.2"
  }
}
